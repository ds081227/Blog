<%- include('partials/header.ejs') %>


<div class="min-vh-100">
    <div class="container my-5">
        <div class="row flex-row justify-content-evenly">
            <div class="main-content col-lg-8 col-12 bg-dark rounded p-4" data-bs-theme="dark">
                <h1><%= data["title"] %></h1>
                <p><%= data["content"] %></p>
            </div>

            <div class="content col-lg-2 col-4 my-4 mx-4 p-4 text-center" style="height: 170px;">
                <form action="/delete" method="post">
                    <input type="text" name="postId" hidden="" value="<%= position %>">
                    <input style="width: 85%;" class="btn btn-danger fs-5 btn-lg my-2 button-rad" type="submit" name="delete" value="Delete">
                </form>
                <a href="/edit/<%= position %>"><input style="width: 85%;" class="btn btn-light fs-5 btn-lg my-2 button-rad" type="button" value="Edit"></a>
            </div>

        </div>
    </div>
</div>


<%- include('partials/footer.ejs') %>