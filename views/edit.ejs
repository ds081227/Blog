<%- include('partials/header.ejs') %>


<div class="min-vh-100">
    <div class="container my-5">
        <div class="row flex-row justify-content-evenly">
            <div class="main-content col-xxl-10 col-xl-10 bg-dark rounded p-4" data-bs-theme="dark">
                <h1>Edit Post</h1>
                <form action="/edit" method="post">
                    <input class="form-control bg-dark my-4" type="text" name="title" placeholder="Title" value="<%= data["title"] %>" required="">
                    <textarea class="form-control dark-form" name="content" id="content" cols="30" rows="18" placeholder="Content" style="resize: none;"><%= data["content"] %></textarea>
                    <div class="text-center m-2">
                        <input type="text" name="postId" hidden="" value="<%= position %>">
                        <input class="btn btn-light fs-5 btn-lg my-4 button-rad" type="submit" value="Update Post">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer.ejs') %>